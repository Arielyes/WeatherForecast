.container{
  margin:0px;
  padding:0px;
}
.top{
  width: 100%;
}
swiper{
  width: 100%;
}

.middle{
  width: 100%;
  height: 60px;
  background-color: gainsboro; /*背景颜色*/
}
input{
  border:1px solid black; /*边框:粗细 实线 颜色*/
  display: inline-block;    /*设置元素同行排列*/
  width: 58%;
  height: 40px;
  margin-top:10px;          /*向下挪动*/
  margin-left: 10px;        /*向右挪动*/
  vertical-align: middle;   /*让同行元素垂直居中对齐*/
}
.middle text{
  display: inline-block;    /*设置元素同行排列*/
  width: 32%;
  height: 40px;
  background-color:grey; /*背景颜色*/
  margin-left: 10px;       /*向右挪动*/
  border-radius: 10px;     /*边框圆角修饰*/
  text-align: center;      /*文字水平居中对齐*/
}